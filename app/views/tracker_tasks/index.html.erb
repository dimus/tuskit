<h1>Listing tasks</h1>

<table>
  <tr>

    <th>Tracker</th>
    <th>Tracker ticket</th>
    <th>Tracker ticket submitter</th>
    <th>Name</th>
    <th>Notes</th>
    <th>Completion date</th>
    <th>Work units est</th>
    <th>Work units real</th>
    <th>Bug</th>
    <th>Created by</th>
    <th>Updated by</th>
  </tr>

<% for task in @tracker_tasks %>
  <tr>

    <td><%=h task.tracker_id %></td>
    <td><%=h task.tracker_ticket_id %></td>
    <td><%=h task.tracker_ticket_submitter %></td>
    <td><%=h task.name %></td>
    <td><%=h task.notes %></td>
    <td><%=h task.bug %></td>
    <td><%=h task.created_by %></td>
    <td><%=h task.updated_by %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_tracker_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

