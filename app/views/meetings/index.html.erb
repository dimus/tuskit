<h1>Listing meetings</h1>

<table>
  <tr>
    <th>Iteration</th>
    <th>Meeting date</th>
    <th>Length</th>
    <th>Name</th>
    <th>Notes</th>
    <th>Created by</th>
    <th>Updated by</th>
  </tr>

<% for meeting in @meetings %>
  <tr>
    <td><%=h meeting.iteration_id %></td>
    <td><%=h meeting.meeting_date %></td>
    <td><%=h meeting.length %></td>
    <td><%=h meeting.name %></td>
    <td><%=h meeting.notes %></td>
    <td><%=h meeting.created_by %></td>
    <td><%=h meeting.updated_by %></td>
    <td><%= link_to 'Show', meeting %></td>
    <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
    <td><%= link_to 'Destroy', meeting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

