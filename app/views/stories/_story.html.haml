- form_for(story) do |f|

  = f.hidden_field :iteration_id, :value => iteration.id

  .input_field
    %b Name
    %br/
    = f.text_field :name, :class => "long"

  .input_field
    %b Description
    %br/
    = f.text_area :description, :class => "big"

  .input_field
    %br/
    Work units est
    = f.text_field :work_units_est, :class => "numeric_entry"
  .input_field
    = f.submit button
