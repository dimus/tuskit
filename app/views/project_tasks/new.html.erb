<h1>New task</h1>

<%= error_messages_for :task %>

<% form_for(@project_task) do |f| %>
  <p>
    <b>Project</b><br />
    <%= f.text_field :project_id %>
  </p>

  <p>
    <b>Tracker ticket</b><br />
    <%= f.text_field :tracker_ticket_id %>
  </p>

  <p>
    <b>Tracker ticket submitter</b><br />
    <%= f.text_field :tracker_ticket_submitter %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Notes</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <b>Bug</b><br />
    <%= f.check_box :bug %>
  </p>

  <p>
    <b>Created by</b><br />
    <%= f.text_field :created_by %>
  </p>

  <p>
    <b>Updated by</b><br />
    <%= f.text_field :updated_by %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', project_tasks_path %>
